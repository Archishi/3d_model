@model Domain.Entity.Order
<h2>Edit Order</h2>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <label>User ID:</label>
    <input asp-for="UserId" required />
    <label>Final Sum:</label>
    <input asp-for="Final_sum" required />
    <label>Status:</label>
    <input asp-for="Status_orders" required />
    <label>Order Date:</label>
    <input asp-for="Date_order" required />
    <label>End Date:</label>
    <input asp-for="Date_end" required />
    <button type="submit">Save</button>
</form>
<a href="@Url.Action("Index")">Back to List</a>
